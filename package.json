{
  "name": "interactive_resume",
  "version": "1.0.0",
  "description": "Interactive resume site with optional ChatKit agent backend.",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently -k -n frontend,backend \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "start": "npm run start --workspace=backend",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mjkang-estrella/interactive-resume.git"
  },
  "keywords": [
    "resume",
    "interactive",
    "portfolio",
    "chatkit",
    "typescript",
    "vite"
  ],
  "author": "Myeongjin Kang <mj.kang@mba.berkeley.edu>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mjkang-estrella/interactive-resume/issues"
  },
  "homepage": "https://github.com/mjkang-estrella/interactive-resume#readme",
  "dependencies": {
    "dotenv": "^16.4.5",
    "openai": "^6.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "concurrently": "^8.2.2",
    "typescript": "^5.5.4"
  }
}
